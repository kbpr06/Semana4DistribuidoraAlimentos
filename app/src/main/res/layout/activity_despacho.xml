<?xml version="1.0" encoding="utf-8"?>
<!--
  Pantalla de seguimiento de despacho:
  - Card 1: Buscar/ingresar ID de pedido
  - Card 2: Línea de tiempo con 4 estados (bolitas y líneas)
  - Card 3: Acciones (simular siguiente estado, guardar/leer Firebase)
-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ===== CARD 1: Encabezado / ID pedido ===== -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:elevation="4dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seguimiento de despacho"
                    android:textStyle="bold"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/tvSub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingresa el ID del pedido para consultar su estado"
                    android:layout_marginTop="4dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <EditText
                        android:id="@+id/etPedidoId"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="ID de pedido (ej: 1713378890123)"
                        android:inputType="text"/>

                    <Button
                        android:id="@+id/btnBuscar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Buscar"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvPedidoMostrado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pedido: —"
                    android:textStyle="bold"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ===== CARD 2: Timeline visual ===== -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_marginBottom="12dp">

            <!-- Contenedor vertical para 4 pasos -->
            <LinearLayout
                android:id="@+id/boxTimeline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Paso 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/dot1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="●"
                        android:textSize="18sp"
                        android:textColor="#BDBDBD"
                    android:gravity="center"/>

                    <TextView
                        android:id="@+id/txt1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recibido"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <!-- Línea entre pasos -->
                <View
                    android:id="@+id/line1"
                    android:layout_width="2dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="11dp"
                    android:layout_marginLeft="11dp"
                    android:background="#BDBDBD"/>

                <!-- Paso 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/dot2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="●"
                        android:textSize="18sp"
                        android:textColor="#BDBDBD"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/txt2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Preparando"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <View
                    android:id="@+id/line2"
                    android:layout_width="2dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="11dp"
                    android:background="#BDBDBD"/>

                <!-- Paso 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/dot3"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="●"
                        android:textSize="18sp"
                        android:textColor="#BDBDBD"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/txt3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="En camino"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <View
                    android:id="@+id/line3"
                    android:layout_width="2dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="11dp"
                    android:background="#BDBDBD"/>

                <!-- Paso 4 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/dot4"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="●"
                        android:textSize="18sp"
                        android:textColor="#BDBDBD"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/txt4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Entregado"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <!-- Estado actual (texto grande) -->
                <TextView
                    android:id="@+id/tvEstadoActual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estado actual: —"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ===== CARD 3: Acciones ===== -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnSimularSiguiente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Simular siguiente estado"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <Button
                        android:id="@+id/btnGuardarFirebase"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Guardar estado en Firebase"/>

                    <Button
                        android:id="@+id/btnLeerFirebase"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Leer estado de Firebase"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Info: —"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
