<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_login_gradient"
    android:paddingHorizontal="16dp"
    android:paddingTop="20dp"
    android:paddingBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Encabezado -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seguimiento de despacho"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/md_theme_onBackground"
            android:layout_marginBottom="4dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvSub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingresa el ID del pedido para consultar su estado"
            android:textAlignment="center"
            android:textSize="13sp"
            android:textColor="@color/md_theme_onSurface"/>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="56dp"
            android:layout_height="3dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"
            app:dividerColor="@color/md_theme_primary"/>

        <!-- ===== CARD 1: ID Pedido ===== -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:backgroundTint="@color/md_theme_surface"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            app:strokeColor="@color/md_outline"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- ID + Buscar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.TextInputLayout.Base"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="ID de pedido (ej: 1713378890123)"
                        app:startIconDrawable="@android:drawable/ic_menu_info_details">

                        <!-- Mantengo el ID: etPedidoId -->
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPedidoId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnBuscar"
                        style="@style/Widget.Button.Primary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Buscar"
                        app:icon="@android:drawable/ic_menu_search"
                        app:iconGravity="textStart"/>
                </LinearLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvPedidoMostrado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pedido: —"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ===== CARD 2: Timeline ===== -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:backgroundTint="@color/md_theme_surface"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            app:strokeColor="@color/md_outline"
            app:strokeWidth="1dp">

            <LinearLayout
                android:id="@+id/boxTimeline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Paso 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/dot1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="●"
                        android:textSize="18sp"
                        android:textColor="#BDBDBD"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/txt1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recibido"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <View
                    android:id="@+id/line1"
                    android:layout_width="2dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="11dp"
                    android:background="#BDBDBD"/>

                <!-- Paso 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/dot2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="●"
                        android:textSize="18sp"
                        android:textColor="#BDBDBD"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/txt2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Preparando"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <View
                    android:id="@+id/line2"
                    android:layout_width="2dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="11dp"
                    android:background="#BDBDBD"/>

                <!-- Paso 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/dot3"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="●"
                        android:textSize="18sp"
                        android:textColor="#BDBDBD"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/txt3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="En camino"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <View
                    android:id="@+id/line3"
                    android:layout_width="2dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="11dp"
                    android:background="#BDBDBD"/>

                <!-- Paso 4 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/dot4"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="●"
                        android:textSize="18sp"
                        android:textColor="#BDBDBD"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/txt4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Entregado"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvEstadoActual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estado actual: —"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ===== CARD 3: Acciones ===== -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/md_theme_surface"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            app:strokeColor="@color/md_outline"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSimularSiguiente"
                    style="@style/Widget.Button.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Simular siguiente estado"
                    app:icon="@android:drawable/ic_media_next"
                    app:iconGravity="textStart"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:weightSum="2">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnGuardarFirebase"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Guardar estado en Firebase"
                        app:icon="@android:drawable/ic_menu_save"
                        app:iconGravity="textStart"
                        app:iconTint="@color/md_theme_primary"/>

                    <Space
                        android:layout_width="8dp"
                        android:layout_height="0dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnLeerFirebase"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Leer estado de Firebase"
                        app:icon="@android:drawable/ic_menu_view"
                        app:iconGravity="textStart"
                        app:iconTint="@color/md_theme_primary"/>
                </LinearLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Info: —"
                    android:textSize="13sp"
                    android:layout_marginTop="10dp"
                    android:background="#0F000000"
                    android:padding="10dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Limitar ancho real en pantallas grandes -->
        <View android:layout_width="480dp" android:layout_height="0dp"/>
    </LinearLayout>
</ScrollView>
