<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootTemp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login_gradient"
    android:padding="16dp">

    <!-- ===== Card 1: Encabezado y estado ===== -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/md_theme_surface"
        app:cardCornerRadius="18dp"
        app:cardUseCompatPadding="true"
        app:strokeColor="@color/md_outline"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Título -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvTituloTemp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monitoreo de Temperatura"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/md_theme_onSurface"
                android:paddingBottom="8dp"/>

            <!-- Fila: icono + valor grande + “chip” de estado -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_thermo"
                    android:contentDescription="Icono termómetro"
                    android:paddingEnd="8dp"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvTempValor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-15 °C"
                    android:textStyle="bold"
                    android:textSize="36sp"
                    android:textColor="@color/md_theme_onSurface"
                    android:paddingEnd="12dp"
                    android:contentDescription="Temperatura actual"/>

                <!-- Mantengo el ID tvEstado (solo le doy estilo de chip) -->
                <TextView
                    android:id="@+id/tvEstado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="En rango de cadena de frío"
                    android:textSize="12sp"
                    android:textColor="@color/md_theme_onSurface"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="6dp"
                    android:background="@drawable/bg_chip_ok"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- ===== Card 2: Control de simulación ===== -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardControl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/md_theme_surface"
        app:cardCornerRadius="18dp"
        app:cardUseCompatPadding="true"
        app:strokeColor="@color/md_outline"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@id/cardHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Simular temperatura (-20°C a +10°C)"
                android:textStyle="bold"
                android:textColor="@color/md_theme_onSurface"
                android:paddingBottom="8dp"/>

            <!-- SeekBar: 0..30 => -20..+10  -->
            <SeekBar
                android:id="@+id/seekSimulador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="30"
                android:progress="5"/>

            <!-- Pista de valor actual (no afecta lógica) -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvHintSeek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Arrastra para simular la temperatura"
                android:textSize="12sp"
                android:textColor="#66000000"
                android:paddingTop="4dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnProbarAlarma"
                style="@style/Widget.Button.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Probar alarma"
                app:icon="@android:drawable/ic_dialog_alert"
                app:iconGravity="textStart"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Limita ancho máximo a 480dp en pantallas grandes -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="0dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
