<?xml version="1.0" encoding="utf-8"?>
<!--
  LoginActivity - UI con CardView
  - Título de pantalla
  - Card con email/contraseña
  - Botones: Iniciar sesión / Crear cuenta
  - Enlace: ¿Olvidaste tu contraseña? (opcional)
-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Título grande -->
        <TextView
            android:text="Iniciar sesión"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <!-- Línea separadora sutil -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#22000000"
            android:layout_marginBottom="12dp" />


        <!-- Tarjeta principal -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card:cardUseCompatPadding="true"
            card:cardCornerRadius="12dp"
            card:cardElevation="4dp">

            <LinearLayout
                android:padding="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Email -->
                <TextView
                    android:text="Correo electrónico"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/etEmail"
                    android:hint="tu@correo.com"
                    android:inputType="textEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"/>

                <!-- Password -->
                <TextView
                    android:text="Contraseña"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/etPass"
                    android:hint="********"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"/>

                <!-- Botones -->
                <Button
                    android:id="@+id/btnLogin"
                    android:text="Iniciar sesión"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/btnRegister"
                    android:text="Crear cuenta nueva"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <!-- Olvidé contraseña (opcional) -->
                <TextView
                    android:id="@+id/tvForgot"
                    android:text="¿Olvidaste tu contraseña?"
                    android:textColor="?android:attr/textColorLink"
                    android:paddingTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <!-- Indicador simple de progreso -->
                <ProgressBar
                    android:id="@+id/progress"
                    android:visibility="gone"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
