<?xml version="1.0" encoding="utf-8"?>
<!-- Layout “ordenado” con dos tarjetas (CardView):
  - Tarjeta 1: Datos de compra (Semana 4)
  - Tarjeta 2: Distancia a Plaza de Armas (Semana 5)
  Todo dentro de un ScrollView para pantallas pequeñas.-->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <!-- Contenedor vertical para apilar tarjetas -->
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:padding="16dp"
android:background="#FFF8F8FA">                  <!-- Fondo gris muy claro -->

<!-- =========================== ENCABEZADO =========================== -->
<TextView
    android:id="@+id/tvTitulo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Calculadora de Despacho"
    android:textStyle="bold"
    android:textSize="25sp"
    android:paddingBottom="2dp" />

<TextView
    android:id="@+id/tvSubtitulo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Costeo y distancia de despacho a Plaza de Armas"
    android:textSize="13sp"
    android:paddingBottom="12dp" />

<!-- Línea separadora sutil -->
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#22000000"
    android:layout_marginBottom="12dp" />

<!-- ===================== TARJETA 1: SEMANA 4 (COMPRA) ===================== -->
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:padding="0dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Contenido interno de la tarjeta -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título de la tarjeta -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Datos de compra"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <!-- Monto -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monto de compra (CLP)"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/editMonto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej.: 30000"
            android:inputType="number"
            android:maxLines="1"
            android:layout_marginBottom="12dp" />

        <!-- Distancia -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Distancia (km)"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/editDistancia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="0 a 20"
            android:inputType="number"
            android:maxLines="1"
            android:layout_marginBottom="12dp" />

        <!-- Grados para radianes -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grados para convertir a radianes"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/editGrados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej.: 180.0 (opcional)"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:layout_marginBottom="16dp" />

        <!-- Botón calcular Semana 4 -->
        <Button
            android:id="@+id/btnCalcular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calcular costo y radianes"
            android:padding="12dp"
            android:backgroundTint="#6A5ACD"
            android:textColor="#FFFFFF" />

        <!-- Resultado de la tarjeta 1 -->
        <TextView
            android:id="@+id/textResultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resultados de compra aparecerán aquí…"
            android:textSize="15sp"
            android:typeface="monospace"
            android:padding="12dp"
            android:background="#0F000000"
            android:layout_marginTop="12dp" />

        <!-- Nota -->
        <TextView
            android:id="@+id/tvNota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="* Solo números. Distancia válida: 0 a 20 km."
            android:textSize="12sp"
            android:layout_marginTop="6dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>

<!-- ===================== TARJETA 2: SEMANA 5 (DISTANCIA) ===================== -->
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título de la tarjeta -->
        <TextView
            android:id="@+id/tvHavTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Distancia de despacho a Plaza de Armas"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <!-- Botón para obtener ubicación (puedes dejarlo si no activas auto-ubicación) -->
        <Button
            android:id="@+id/btnObtenerUbicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detectar ubicación de origen"
            android:padding="12dp"
            android:backgroundTint="#6A5ACD"
            android:textColor="#FFFFFF" />

        <!-- Lat/Lon detectada -->
        <TextView
            android:id="@+id/tvMiUbicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mi ubicación: lat=?, lon=?"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <!-- Ciudad destino -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plaza de Armas de:"
            android:textSize="12sp" />

        <Spinner
            android:id="@+id/spinnerCiudad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" />

        <!-- Botón calcular distancia -->
        <Button
            android:id="@+id/btnCalcularDistancia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calcular distancia de despacho"
            android:padding="12dp"
            android:backgroundTint="#6A5ACD"
            android:textColor="#FFFFFF" />

        <!-- Resultado de la tarjeta 2 -->
        <TextView
            android:id="@+id/tvResultadoDistancia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Distancia: — km"
            android:textSize="15sp"
            android:typeface="monospace"
            android:padding="12dp"
            android:background="#0F000000"
            android:layout_marginTop="12dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>

<!-- =========================== PIE / NOTA =========================== -->
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Nota: en emulador se debe fijar ubicación manual (Extended Controls → Location)."
    android:textSize="12sp"
    android:textColor="#66000000"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingBottom="12dp" />

</LinearLayout>
    </ScrollView>
