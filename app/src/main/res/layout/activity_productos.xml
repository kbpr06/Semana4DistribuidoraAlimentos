<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_login_gradient"
    android:paddingHorizontal="16dp"
    android:paddingTop="20dp"
    android:paddingBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Encabezado -->
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Productos y Despacho"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/md_theme_onBackground"
            android:layout_marginBottom="6dp"/>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="56dp"
            android:layout_height="3dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            app:dividerColor="@color/md_theme_primary"/>

        <!-- ===== CARD 1: SELECCIÓN (Catálogo + Cantidad + Agregar) ===== -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:backgroundTint="@color/md_theme_surface"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            app:strokeColor="@color/md_outline"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvTituloSel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selecciona producto y cantidad"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <!-- Catálogo -->
                <Spinner
                    android:id="@+id/spProducto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <!-- Cantidad (mantengo EditText y su id) -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.TextInputLayout.Base"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Cantidad"
                    app:startIconDrawable="@android:drawable/ic_input_add">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCantidad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAgregar"
                    style="@style/Widget.Button.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Agregar al carrito"
                    app:icon="@android:drawable/ic_menu_add"
                    app:iconGravity="textStart"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ===== CARD 2: CARRITO (lista + total + guardar + pasar subtotal) ===== -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:backgroundTint="@color/md_theme_surface"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            app:strokeColor="@color/md_outline"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvTituloCarrito"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carrito"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <ListView
                    android:id="@+id/lvCarrito"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:divider="@color/md_outline"
                    android:dividerHeight="1dp"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total: $0"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:gravity="end"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGuardar"
                    style="@style/Widget.Button.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Guardar carrito en Firebase"
                    app:icon="@android:drawable/ic_menu_save"
                    app:iconGravity="textStart"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAplicarSubtotal"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Usar subtotal en Despacho"
                    app:icon="@android:drawable/ic_menu_set_as"
                    app:iconGravity="textStart"
                    app:iconTint="@color/md_theme_primary"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ===== CARD 3: DESPACHO ===== -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/md_theme_surface"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            app:strokeColor="@color/md_outline"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvTituloDespacho"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Despacho"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="8dp"/>

                <!-- Monto del carrito (mantengo EditText e ID) -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.TextInputLayout.Base"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Monto del carrito (CLP)"
                    app:startIconDrawable="@android:drawable/ic_menu_sort_by_size">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editMontoCarrito"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Ciudad destino -->
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Plaza de Armas de:"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"/>

                <Spinner
                    android:id="@+id/spinnerCiudad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <!-- Ubicación + acciones -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvMiUbicacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mi ubicación: —"
                    android:layout_marginTop="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:weightSum="2">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnObtenerUbicacion"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Obtener mi ubicación"
                        app:icon="@android:drawable/ic_menu_mylocation"
                        app:iconGravity="textStart"
                        app:iconTint="@color/md_theme_primary"/>

                    <Space
                        android:layout_width="8dp"
                        android:layout_height="0dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCalcularTotal"
                        style="@style/Widget.Button.Primary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Calcular total"
                        app:icon="@android:drawable/ic_menu_directions"
                        app:iconGravity="textStart"/>
                </LinearLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvResultadoDespacho"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Distancia: —  |  Despacho: —  |  Total: —"
                    android:textSize="14sp"
                    android:typeface="monospace"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#0F000000"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnConfirmarPedido"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Confirmar pedido"
                    app:icon="@android:drawable/ic_menu_save"
                    app:iconGravity="textStart"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Limitar ancho real a 480dp (look enterprise en pantallas grandes) -->
        <View android:layout_width="480dp" android:layout_height="0dp"/>

    </LinearLayout>
</ScrollView>
