<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Card base -->
    <style name="Widget.Card.Base" parent="Widget.MaterialComponents.CardView">
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <!-- BotÃ³n primario -->
    <style name="Widget.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">14dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- TextInputLayout moderno -->
    <style name="Widget.TextInputLayout.Base" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/md_theme_primary</item>
        <item name="hintTextColor">@color/md_theme_onSurface</item>
        <item name="helperTextEnabled">true</item>
    </style>

</resources>
